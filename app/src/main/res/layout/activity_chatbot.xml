<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clChatbot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatbotActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Chatbot" />

    <ScrollView
        android:id="@+id/scrollConversation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F8F9FF"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/chatInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:id="@+id/llConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatbotIcon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="Chatbot Icon"
                    android:src="@drawable/ic_chatbot" />

                <TextView
                    android:id="@+id/tvChatbotMsg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bubble_chatbot"
                    android:padding="8dp"
                    android:text="Hola! Voy a ayudarte a registrar un nuevo medicamento. ¿Cómo se llama el medicamento?"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvUserMsg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_user"
                    android:padding="8dp"
                    android:text="Ibuprofeno"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatbotIcon2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="Chatbot Icon"
                    android:src="@drawable/ic_chatbot" />

                <TextView
                    android:id="@+id/tvChatbotMsg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bubble_chatbot"
                    android:padding="8dp"
                    android:text="¿Para qué es el Ibuprofeno?"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvUserMsg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_user"
                    android:padding="8dp"
                    android:text="Para el dolor de cabeza"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatbotIcon3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="Chatbot Icon"
                    android:src="@drawable/ic_chatbot" />

                <TextView
                    android:id="@+id/tvChatbotMsg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bubble_chatbot"
                    android:padding="8dp"
                    android:text="¿En qué presentación la tomas? Es una tableta, cápsulas, inyección u otra forma?"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvUserMsg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_user"
                    android:padding="8dp"
                    android:text="Tableta"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatbotIcon4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="Chatbot Icon"
                    android:src="@drawable/ic_chatbot" />

                <TextView
                    android:id="@+id/tvChatbotMsg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bubble_chatbot"
                    android:padding="8dp"
                    android:text="¿Con qué frecuencia necesitas tomarlo?"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvUserMsg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_user"
                    android:padding="8dp"
                    android:text="Todos los días"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChatbotIcon5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:contentDescription="Chatbot Icon"
                    android:src="@drawable/ic_chatbot" />

                <TextView
                    android:id="@+id/tvChatbotMsg5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bubble_chatbot"
                    android:padding="8dp"
                    android:text="¿Cuántas veces al día?"
                    android:textColor="@android:color/black" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/scrollConversation">

        <TextView
            android:id="@+id/btnUnaVez"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bubble_options"
            android:gravity="center"
            android:text="Una vez" />

        <TextView
            android:id="@+id/btnDosVeces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/bubble_options"
            android:gravity="center"
            android:text="Dos veces" />

        <TextView
            android:id="@+id/btnTresVeces"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bubble_options"
            android:gravity="center"
            android:text="Tres veces" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/chatInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_cover_chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/bubble_chat"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_text" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/chatMessageEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="text"
                android:padding="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_microphone" />
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
